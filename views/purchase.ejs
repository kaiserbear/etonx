<% include ./partials/header %>
    <% include ./partials/alerts %>
        <% include ./partials/nav %>

            <main id="swup" class="transition-fade">

                <section class="purchase">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">


                                <form id="purchase-form" action="/purchase" method="post">

                                    <h3>Complete Purchase</h3>
                                    <div class="row course-desc">
                                        <div class="col-3">
                                            <img src="/img/courses/university-skills.jpg" alt="" />
                                        </div>
                                        <div class="col-9">
                                            <h4>University Interview Skills</h4>
                                            <p>Maecenas a fermentum nulla, vel cursus nisi. Aliquam ultrices molestie velit, in iaculis leo. Curabitur vehicula felis a erat dapibus, sit amet maximus nisl maximus. Mauris et elit nulla.</p>
                                        </div>
                                    </div>
                                    <div class="subtotal">
                                        <h4>Payment</h4>
                                        <h4>Total &pound;200.00</h4>
                                    </div>

                                    <div class="form-group">
                                        <label>Name on card</label>
                                        <input class="form-control" type="text" name="name_on_card" placeholder="John Smith">
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-8">
                                                <label>Card Number</label>
                                                <input class="form-control" type="text" name="card_number" placeholder="XXXX-XXXX-XXXX-XXXX">
                                            </div>
                                            <div class="col-4">
                                                <label>Expiry</label>
                                                <input class="form-control" type="text" name="expiry" placeholder="MM-YY">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Billing Email</label>
                                        <input class="form-control" type="text" name="email1" id="email1" placeholder="john.smith@email.com">
                                    </div>

                                    <div class="form-group">
                                        <label>Confirm Billing Email</label>
                                        <input class="form-control" type="text" name="email2" placeholder="john.smith@email.com">
                                    </div>

                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Promotional Code</label>
                                                <input class="form-control" type="text" name="promo">
                                            </div>
                                            <div class="col-8">
                                                <input type="hidden" name="checkID" value="<%= checkID %>" />
                                                <!-- If I get a chance I'll make the courses dynamic -->
                                                <input type="hidden" name="course" value="University Interview Skills" />


                                                <button type="submit" class="btn btn-primary">Complete purchase</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </section>

                <% include ./partials/footer %>